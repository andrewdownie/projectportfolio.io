RewriteEngine On
RewriteBase /

#####
##### REDIRECTIONS
#####

# Redirect to root, if at /user, but missing a username
RewriteCond %{QUERY_STRING} ^$
RewriteRule ^user([.]php)?[/]?$ "" [R,L,NC]

# Redirect .php urls to non .php version
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}([^.]+)\.php [NC]
RewriteRule ^(.*).php/?$ $1 [R,L,NC]


#####
##### MAPPINGS
#####

# Map user
RewriteRule ^user/([A-Za-z0-9._]*)/?$ user.php?username=$1 [L]

# Map project
RewriteRule ^user/([A-Za-z0-9._]*)/([A-Za-z0-9._]*)/?$ user.php?username=$1&projectname=$2 [L]

# Map browse blogs
RewriteRule ^user/([A-Za-z0-9._]*)/([A-Za-z0-9._]*)/blogs/?$ user.php?username=$1&projectname=$2 [L]

# Map blog
RewriteRule ^user/([A-Za-z0-9._]*)/([A-Za-z0-9._]*)/blogs/([A-Za-z0-9._]*)/?$ user.php?username=$1&projectname=$2&blogname=$3 [L]


# Map browse builds
RewriteRule ^user/([A-Za-z0-9._]*)/([A-Za-z0-9._]*)/builds/?$ user.php?username=$1&projectname=$2 [L]

# Map build
RewriteRule ^user/([A-Za-z0-9._]*)/([A-Za-z0-9._]*)/builds/([A-Za-z0-9._]*)/?$ user.php?username=$1&projectname=$2&buildname=$3 [L]


# Map browse goals
RewriteRule ^user/([A-Za-z0-9._]*)/([A-Za-z0-9._]*)/goals/?$ user.php?username=$1&projectname=$2 [L]

# Map goal
RewriteRule ^user/([A-Za-z0-9._]*)/([A-Za-z0-9._]*)/goals/([A-Za-z0-9._]*)/?$ user.php?username=$1&projectname=$2&goalname=$3 [L]

# Map client facing urls to .php files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ $1.php [L]
